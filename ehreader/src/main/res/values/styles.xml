<resources>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Main.Base" parent="AppTheme"></style>

    <style name="AppTheme.Main" parent="AppTheme.Main.Base"></style>

    <style name="AppTheme.Search.Base" parent="AppTheme">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/search_status_bar</item>
        <item name="colorAccent">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.Search" parent="AppTheme.Search.Base"/>

    <style name="AppTheme.Photo.Base" parent="AppTheme">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.Photo" parent="AppTheme.Photo.Base"/>

    <style name="AppTheme.Login.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme.Login.Base"/>

    <style name="SectionTitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EditText.Login" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/primary_light</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:textColor">@color/icons</item>
    </style>
</resources>
