<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- View -->
    <PreferenceCategory
        android:title="@string/pref_view_title">
        <tw.skyarrow.ehreader.view.ListPreferenceWithSummary
            android:key="@string/pref_launch_page"
            android:title="@string/pref_launch_page_title"
            android:entries="@array/main_menu"
            android:defaultValue="@string/pref_launch_page_default"
            android:dialogTitle="@string/pref_launch_page_title"
            android:entryValues="@array/pref_launch_page_values"/>
        <tw.skyarrow.ehreader.view.ListPreferenceWithSummary
            android:key="@string/pref_screen_orientation"
            android:title="@string/pref_screen_orientation_title"
            android:entries="@array/pref_screen_orientation_entries"
            android:defaultValue="@string/pref_screen_orientation_default"
            android:dialogTitle="@string/pref_screen_orientation_title"
            android:entryValues="@array/pref_screen_orientation_values"/>
        <CheckBoxPreference
            android:key="@string/pref_volume_key_navigation"
            android:title="@string/pref_volume_key_navigation_title"
            android:summary="@string/pref_volume_key_navigation_summary"
            android:defaultValue="@bool/pref_volume_key_navigation_default"/>
        <CheckBoxPreference
            android:key="@string/pref_keep_screen_on"
            android:title="@string/pref_keep_screen_on_title"
            android:summary="@string/pref_keep_screen_on_summary"
            android:defaultValue="@bool/pref_keep_screen_on_default"/>
        <CheckBoxPreference
            android:key="@string/pref_japanese_title"
            android:title="@string/pref_japanese_title_title"
            android:summary="@string/pref_japanese_title_summary"
            android:defaultValue="@bool/pref_japanese_title_default"/>
    </PreferenceCategory>
    <!-- Download -->
    <PreferenceCategory
        android:title="@string/pref_download_title">
        <CheckBoxPreference
            android:key="@string/pref_auto_download"
            android:title="@string/pref_auto_download_title"
            android:summary="@string/pref_auto_download_summary"
            android:defaultValue="@bool/pref_auto_download_default"/>
        <CheckBoxPreference
            android:key="@string/pref_download_over_wifi"
            android:title="@string/pref_download_over_wifi_title"
            android:summary="@string/pref_download_over_wifi_summary"
            android:defaultValue="@bool/pref_download_over_wifi_default"/>
        <CheckBoxPreference
            android:key="@string/pref_hide_files"
            android:title="@string/pref_hide_files_title"
            android:summary="@string/pref_hide_files_summary"
            android:defaultValue="@bool/pref_hide_files_default"/>
    </PreferenceCategory>
    <!-- Update -->
    <PreferenceCategory
        android:title="@string/pref_update_title">
        <PreferenceScreen
            android:title="@string/pref_check_update_title"
            android:key="@string/pref_check_update"/>
        <tw.skyarrow.ehreader.view.ListPreferenceWithSummary
            android:title="@string/pref_auto_check_update_title"
            android:key="@string/pref_auto_check_update"
            android:defaultValue="@string/pref_auto_check_update_default"
            android:entries="@array/pref_auto_check_update_entries"
            android:entryValues="@array/pref_auto_check_update_values"
            android:dialogTitle="@string/pref_auto_check_update_title"/>
    </PreferenceCategory>
    <!-- Advanced -->
    <PreferenceCategory
        android:title="@string/pref_advanced_title">
        <PreferenceScreen
            android:title="@string/pref_clear_cache_title"
            android:key="@string/pref_clear_cache"/>
        <PreferenceScreen
            android:title="@string/pref_clear_history_title"
            android:key="@string/pref_clear_history"/>
        <PreferenceScreen
            android:title="@string/pref_clear_search_title"
            android:key="@string/pref_clear_search"/>
    </PreferenceCategory>
    <!-- About -->
    <PreferenceCategory
        android:title="@string/pref_about_title">
        <PreferenceScreen
            android:key="@string/pref_version"
            android:title="@string/pref_version_title"/>
        <PreferenceScreen
            android:key="@string/pref_author"
            android:title="@string/pref_author_title"
            android:summary="@string/pref_author_summary"/>
        <PreferenceScreen
            android:key="@string/pref_source_code"
            android:title="@string/pref_source_code_title"
            android:summary="@string/pref_source_code_summary"/>
    </PreferenceCategory>
</PreferenceScreen>