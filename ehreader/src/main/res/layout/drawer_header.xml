<tw.skyarrow.ehreader.view.FixedAspectRatioLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="?attr/colorPrimary"
    app:aspectRatioWidth="16"
    app:aspectRatioHeight="9">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_medium"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_above="@+id/name"
            android:layout_marginBottom="@dimen/margin_medium"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/icons"
            android:text="@string/not_login_placeholder"
            android:textSize="@dimen/text_size_body"
            android:textStyle="bold"
            android:layout_above="@+id/hint"
            android:layout_marginBottom="@dimen/margin_tiny"/>
        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/icons"
            android:text="@string/login_title"
            android:textSize="@dimen/text_size_caption"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</tw.skyarrow.ehreader.view.FixedAspectRatioLayout>